{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es5",
      "es6"
    ],
    "inlineSourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}