{
  "name": "umbra-cli",
  "description": "Exposes a mechanism for running Umbra tests via CLI.",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/umbra-test/umbra-cli.git"
  },
  "bin": {
    "umbra": "lib/index.cjs.js"
  },
  "main": "lib/index.cjs.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && rollup -c",
    "test": "tsc -p tsconfig-tests.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tst",
      "coverage"
    ],
    "reporter": [
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "@umbra-test/umbra-test-runner": "^0.0.1",
    "@umbra-test/umbra-util": "^0.0.1",
    "ansi-escapes": "^4.3.1",
    "argparse": "^1.0.10",
    "callsite-record": "^4.1.3",
    "chalk": "^3.0.0",
    "fast-glob": "^3.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/argparse": "^1.0.38",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.1",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "@types/source-map-support": "^0.5.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "nyc": "^15.0.1",
    "rollup": "^2.0.6",
    "rollup-plugin-terser": "^5.3.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
