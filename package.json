{
  "name": "umbra-cli",
  "description": "Exposes a mechanism for running Umbra tests via CLI.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/umbra-test/umbra-cli.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && rollup -c",
    "test": "tsc -p tsconfig-tests.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tst",
      "coverage"
    ],
    "reporter": [
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "ansi-escapes": "^4.3.0",
    "callsite-record": "^4.1.3",
    "chalk": "^3.0.0",
    "dynamic-terminal": "^1.0.6",
    "fast-glob": "^3.1.1",
    "umbra-test-runner": "^0.0.1",
    "umbra-util": "^1.0.0"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.36",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "argparse": "^1.0.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "nyc": "next",
    "rollup": "^1.27.12",
    "rollup-plugin-terser": "^5.1.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
